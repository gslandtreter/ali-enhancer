{
  "manifest_version": 3,

  "name": "ALI Enhancer",
  "description": "Melhora a usabilidade do Sistema ALI",
  "version": "1.0",

  "options_ui": {
    "page": "options.html"
  },

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/req_interceptor.js"
  },

  "permissions": [
    "webRequest",
    "scripting"
  ],

  "web_accessible_resources": [
    {
      "resources": ["newtab.svg"],
      "matches": ["<all_urls>"]
    }
  ],

  "host_permissions": [
    "*://*.sebrae.com.br/*"
  ]
}
